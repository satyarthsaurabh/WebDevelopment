<%- include('partials/header') %>
<div class="container">
	<div class="row">
	 <h2 style="text-align : center">Add a comment to <%= campground.name %></h2>
		<div style="margin: 40px auto; width: 30%">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
				<input class="form-control form-group" type="text" name="comment[author]" placeholder="Author">
				<input class="form-control form-group" type="text" name="comment[text]" placeholder="Text">
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">submit</button>
				</div>
				<a href="/campgrounds">Go back</a>
			</form>
		</div>
	</div>
</div>


<%- include('partials/footer') %>