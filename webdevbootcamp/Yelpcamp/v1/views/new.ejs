<%- include("partials/header") %>
<div class="container">
	<div class="row">
		<h2 style="text-align : center">Add a New Campground</h2>
		<div style="margin: 30px auto; width : 30% ">
			<form action="/campgrounds" method="POST">
				<input class= "form-control form-group" type="text" placeholder="Campground name" name="name">
				<input class= "form-control form-group" type="text" placeholder="image url" name="image">
				<input class= "form-control form-group" type="text" placeholder="description" name="description">
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">submit</button>
				</div>	
				<a href="/campgrounds">Go back</a>
			</form>
		</div>
	</div>
</div>
